<div class="container">
  <h2>Lista de Productos</h2>
  <table>
    <tr>
      <th><span>ID</span></th>
      <th><span>Nombre</span></th>
      <th><span>Descripción</span></th>
      <th><span>Categoría</span></th>
      <th><span>Precio</span></th>
      <th><span>Stock</span></th>
    </tr>
    {{#if productsLimited}}
    {{#each productsLimited}}
    <tr>
      <td>{{_id}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>{{category}}</td>
      <td>{{price}}</td>
      <td>{{stock}}</td>
    </tr>
    {{/each}}
    {{/if}}

    {{#if productById}}
    {{#each productById}}
    <tr>
      <td>{{_id}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>{{category}}</td>
      <td>{{price}}</td>
      <td>{{stock}}</td>
    </tr>
    {{/each}}
    {{/if}}
    {{#each products}}
    <tr>
      <td>{{_id}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>{{category}}</td>
      <td>{{price}}</td>
      <td>{{stock}}</td>
    </tr>
    {{/each}}
  </table>
</div>
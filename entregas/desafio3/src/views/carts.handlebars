<div class="container">
  <h1>Carritos</h1>

  {{#if cart}}
  <h2>Carrito con Id: <span>{{cid}}</span></h2>
  <table>
    <tr>
      <th><span>Producto</span></th>
      <th><span>Cantidad</span></th>
    </tr>
    {{#each cart}}
    <tr>
      <td>{{cart.product}}</td>
      <td>{{cart.quantity}}</td>
    </tr>
    {{/each}}
  </table>
  {{/if}}
  
  {{#if carts}}
  <h2>Lista de Productos</h2>
  <table>
    <tr>
      <th><span>ID</span></th>
      <th><span>Productos</span></th>
    </tr>
    {{#each carts}}
    <tr>
      <td>{{_id}}</td>
      <td>
        {{#each products}}
        <ul>
          <li>ID:{{product}}</li>
          <li>Cantidad: {{quantity}}</li>
        </ul>
        {{/each}}
      </td>
    </tr>
    {{/each}}
  </table>
  {{/if}}

  <button><a href="http://localhost:8080/">Back to Home</a></button>
</div>